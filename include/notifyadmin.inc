<%Sub NotifyAdminNewUser(strLogin,strHowDidYouHear)		Dim objDB	Dim objRS	Dim item	Dim strSQL		If strHowDidYouHear = "" Then		strHowDidYouHear = "thin air, bozos"	End If		Set objDB = Server.CreateObject("ADODB.Connection")	objDB.Open DATABASE	Set objRS = Server.CreateObject("ADODB.Recordset")		strSQL = "SELECT * " _		       & "FROM   user " _			   & " WHERE  login = '" & strLogin & "'"	Response.Write(strSQL)	objRS.Open strSQL, DATABASE			'SwingBot sends his love	strBody = 	"*INCOMING MESSAGE FROM SWINGBOT, RULER OF WINDYHOP...*"& vbcrlf & _				vbcrlf & _				"A new user has signed up with the site.  We are one more closer to world domination." & vbcrlf & _				vbcrlf & _				"Rumor has it that they found us from " & strHowDidYouHear & ". " & vbcrlf & vbcrlf & _				"Love," & vbcrlf & _				"SwingBot" & vbcrlf & "(you guys rule.)" & vbCrlF									strBody = strBody & "==========================" & vbCrlF	'Response.Write ("Database = " & DATABASE & "<br>")	'response.Write("<hr>" & strBody & "<hr>")	response.write("Record Count = " & objRS.RecordCount & "<br>")	If Not objRS.EOF Then		For each item in objRS.Fields			'strBody = strBody & "<TR> <TD> <FONT face=Verdana SIZE=1>"			strBody = strBody & UCase(item.Name) & ": " 			'strBody = strBody & "</FONT></TD><TD><FONT face=Verdana SIZE=1>" 			strBody = strBody & item.Value & vbCrlF			'strBody = strBody & "</FONT></TD></TR>"			response.Write("<hr>" & strBody & "<hr>")		Next	Else		Response.Write("EOF, jason!<br>")	End If		'strBody = strBody & "</TABLE>"	strBody = strBody & "==========================" & vbCrlF		'response.Write(strBody)		'SendMail(SenderName, SenderAddress,RecipientAddress,Subject,Body)	SendMail "SwingBot", "swingbot@windyhop.org", "admin@windyhop.org", "New User "&strLogin&" Signed Up", strBodyEnd Sub%>