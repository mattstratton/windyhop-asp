<%Option ExplicitDim strTableDim strRecordIDDim sActionDim tempstrTable = Request.QueryString("table")strRecordID = Request.QueryString("recordid")If strTable = "" Then	Response.Redirect("edit.asp")End If%><!-- #include file="../include/globalc.inc" --> <!-- #include file="../include/top.txt" --> <!-- #include file="../include/getname.inc" --> <!-- #include file="../include/deleterecord.inc" --> <%sAction = Request.Querystring("action")Select Case sAction		Case "request" 		Response.Write("Are you sure you want to Delete """ & GetName(strTable, "Name", strRecordID) & """?")		'If strTable is 		Response.Write("<br><a href=./delete.asp?table=" & strTable & "&recordid=" & strRecordID & "&action=confirm>Yes, get rid of my trash!</a><br><br>")		Response.Write("<br><a href=./edit.asp>No!  Take me back to the Edit page!</a>")		Case "confirm"		temp =  GetName(strTable, "Name", strRecordID)		DeleteRecord strTable,strRecordID		Response.Write("""" & temp & """ has been deleted.<p>")		Response.Write("<br><a href=./edit.asp>Take me back to the Edit page!</a>")				Case Else		Response.Write("ERROR")End Select%>